extends claritybase

block content
    .login-wrapper
        form(class="login" method="POST")
            label(class="title")
                h3(class="welcome") Welcome to #{data.title}
                h5(class="hint") Use your vSphere account to sign in
            .login-group
                // HACK: prepopulate form with credentials
                input(type="text" name="host" id="login_host" placeholder="Host" value=`${process.env.HOST}`)
                input(class="username" type="email" name="user" id="login_username" placeholder="Username" value=`${process.env.USERID}`)
                input(class="password" type="password" name="password" id="login_password" placeholder="Password" value=`${process.env.PASS}`)
                button(type="submit" class="btn btn-primary") NEXT
